<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddNewMedicineWindow" android:background="#303030">

    <TextView
            android:text="Pridanie nového lieku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="36dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <TextView
            android:text="Názov lieku : "
            android:layout_width="81dp"
            android:layout_height="39dp"
            android:id="@+id/textView2" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <AutoCompleteTextView
            android:layout_width="167dp"
            android:layout_height="45dp"
            android:id="@+id/autoCompleteTextView" android:layout_marginTop="88dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="12dp"/>
    <TextView
            android:text="Začiatok : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <EditText
            android:layout_width="141dp"
            android:layout_height="38dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView"
            app:layout_constraintStart_toEndOf="@+id/textView3"/>
    <EditText
            android:layout_width="104dp"
            android:layout_height="38dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/autoCompleteTextView"
            app:layout_constraintStart_toEndOf="@+id/editText" android:layout_marginStart="12dp"/>
    <TextView
            android:text="Opakovať každých :"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <RadioButton
            android:text="8 hod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"/>
    <RadioButton
            android:text="12 hod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/radioButton"
            android:layout_marginStart="36dp"/>
    <RadioButton
            android:text="24 hod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton3" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" app:layout_constraintStart_toEndOf="@+id/radioButton2"
            android:layout_marginStart="56dp"/>
    <Button
            android:text="Uložiť"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_uloz" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/radioButton2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="76dp"/>
    <Button
            android:text="Zrušiť"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/radioButton2" app:layout_constraintStart_toEndOf="@+id/id_uloz"
            android:layout_marginStart="44dp"/>
</android.support.constraint.ConstraintLayout>