<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterWindow" android:background="#303030">

    <EditText
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/id_name_input" android:layout_marginTop="44dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toEndOf="@+id/id_name_view"
            android:layout_marginStart="28dp"/>
    <EditText
            android:layout_width="189dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/id_surname_input" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/id_name_input"
            app:layout_constraintStart_toEndOf="@+id/id_surname_view"/>
    <EditText
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/id_username_input" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/id_surname_input"
            app:layout_constraintStart_toEndOf="@+id/id_username_view"/>
    <EditText
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/id_pass"
            app:layout_constraintStart_toEndOf="@+id/id_pass_view"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/id_username_input"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Meno : "
            android:layout_width="43dp"
            android:layout_height="45dp"
            android:id="@+id/id_name_view" android:layout_marginTop="56dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp"/>
    <TextView
            android:text="Priezvisko : "
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:id="@+id/id_surname_view" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/id_name_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="Username : "
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:id="@+id/id_username_view" android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/id_surname_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <TextView
            android:text="Heslo : "
            android:layout_width="41dp"
            android:layout_height="42dp"
            android:id="@+id/id_pass_view"
            app:layout_constraintTop_toBottomOf="@+id/id_username_view" android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="52dp"/>
    <Button
            android:text="Registruj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="148dp" android:id="@+id/id_registruj" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/id_pass" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>